            </div>
            <div class="form-group">
                <label asp-for="GuestLastName" class="control-label"></label>
                <input asp-for="GuestLastName" class="form-control" />
                <span asp-validation-for="GuestLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestEmail" class="control-label"></label>
                <input asp-for="GuestEmail" class="form-control" />
                <span asp-validation-for="GuestEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestPhoneNumber" class="control-label"></label>
                <input asp-for="GuestPhoneNumber" class="form-control" type="number" />
                <span asp-validation-for="GuestPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
