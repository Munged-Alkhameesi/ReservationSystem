@model DatabaseReservation.Models.Guest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Guest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GuestId" />
            <div class="form-group">
                <label asp-for="GuestFirstName" class="control-label"></label>
                <input asp-for="GuestFirstName" class="form-control" />
